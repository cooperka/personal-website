{
  "name": "personal-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "checkAll": "yarn run lint --fix && yarn run flow && yarn run test --updateSnapshot --watchAll=0",
    "format": "prettier --write 'src/**/*.js' --write '*.md'",
    "lint": "eslint --ext .js .",
    "flow": "flow",
    "test": "react-scripts test",
    "clean": "rm -rf build",
    "build": "yarn run clean && react-scripts build",
    "build:snapshot": "yarn run build && react-snapshot",
    "build:css": "node-sass src/vendor/ -o src/vendor/ && sed -i 's/\\.material \\./.material./' src/vendor/materialize/sass/materialize.css",
    "deploy": "yarn run build:snapshot && firebase deploy",
    "eject": "react-scripts eject"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-snapshot": "1.3.0"
  },
  "devDependencies": {
    "babel-eslint": "10.1.0",
    "eslint": "7.16.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-cooperka": "1.0.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "4.0.0",
    "firebase-tools": "5.1.1",
    "flow-bin": "0.83.0",
    "flow-typed": "2.5.1",
    "husky": "4.3.6",
    "lsr-tooling": "1.1.0",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0",
    "react-scripts": "4.0.1",
    "react-test-renderer": "17.0.1"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
