{
  "name": "personal-site",
  "version": "1.1.0",
  "private": true,
  "scripts": {
    "start": "react-static start",
    "format": "prettier --write '{src,plugins}/**/*.js' --write '*.{js,md}'",
    "lint": "eslint --ext .js .",
    "test": "jest",
    "clean": "rm -rf build dist artifacts tmp",
    "build": "react-static build",
    "stage": "yarn run build --staging && serve dist -p 3000",
    "analyze": "yarn run build --analyze",
    "deploy": "yarn run build && firebase deploy"
  },
  "dependencies": {
    "@material-ui/core": "4.11.2",
    "fontsource-roboto": "3.1.5",
    "prop-types": "15.7.2",
    "ramda": "0.27.1",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-hot-loader": "4.13.0",
    "react-static": "7.4.2",
    "react-static-plugin-reach-router": "7.4.2",
    "react-static-plugin-sitemap": "7.4.2",
    "react-static-plugin-source-filesystem": "7.4.2"
  },
  "devDependencies": {
    "babel-eslint": "10.1.0",
    "eslint": "7.16.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-cooperka": "1.0.4",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "4.0.0",
    "firebase-tools": "9.1.0",
    "husky": "4.3.6",
    "jest": "26.6.3",
    "jest-watch-typeahead": "0.6.1",
    "lsr-tooling": "1.1.0",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0",
    "react-jss": "10.5.0",
    "react-static-plugin-jss": "7.3.0",
    "react-test-renderer": "17.0.1",
    "serve": "11.3.2"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always",
    "overrides": [
      {
        "files": "static.config.js",
        "options": {
          "printWidth": 120
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "<rootDir>/src/**/*.test.js"
    ],
    "transform": {
      "\\.js$": "babel-jest",
      "\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ],
    "resetMocks": true
  },
  "babel": {
    "presets": [
      "react-static/babel-preset.js"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
