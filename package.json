{
  "name": "personal-site",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "clean": "rm -rf build",
    "build": "yarn run clean && react-scripts build",
    "build:snapshot": "yarn run build && react-snapshot",
    "build:css": "node-sass src/vendor/ -o src/vendor/",
    "deploy": "yarn run build:snapshot && firebase deploy",
    "test": "react-scripts test --env=jsdom",
    "lint": "eslint . --ext .js,.jsx",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "react": "16.2.0",
    "react-dom": "16.2.0",
    "react-snapshot": "1.3.0"
  },
  "devDependencies": {
    "babel-eslint": "8.0.3",
    "eslint": "4.12.1",
    "eslint-config-airbnb": "16.1.0",
    "eslint-config-cooperka": "0.2.8",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jsx-a11y": "6.0.2",
    "eslint-plugin-react": "7.5.1",
    "flow-bin": "0.60.1",
    "react-scripts": "1.0.17",
    "react-test-renderer": "16.2.0"
  }
}
